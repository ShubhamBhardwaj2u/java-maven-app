
pipeline{
  agent any
  environment{
    NEW_VERSION = "1.0.0"
  }
  tools{
    maven 'Maven 3.9.6'
  }
  stages{
    stage("Testing"){
      when{
        expression{
          NEW_VERSION == "1.0.0"
        }
      }
      steps{
        echo "Running test!"
        sh mvn --v
      }
    }
    stage("Building"){
      steps{
        echo "Building Application!"
      }
    }
    stage("Deploying"){
      steps{
        script{
          withCredentials([
            usernamePassword(credentialsId: 'server_credentials', usernameVariable: 'USER', passwordVariable: 'PWD')
          ]){
            print "username=" + USER + "  " + "password=" + PWD 
          }
        }
        //echo "Deploying Application"
      }
    }
  }

  post{
    always{ 
      echo "Process End!"
    }
    success{
      echo "Completed with success!"
    }
    failure{
      echo "failed!"
    }
  }

}
