pipeline{
  agent any
  environment{
    NEW_VERSION = '1.0.0'
  }
  tools{
  maven 'Maven 3.9.6'
  }
  stages{
      stage("Testing"){
        steps{
          echo "Testing is running!"
          echo  "new version is ${NEW_VERSION}"
          sh "maven --version"
        }
      }
      stage("Building"){
       steps{
          echo "Building is running!"
        }
      }
      stage("Deploying"){
        steps{
          echo "Deploying is running!"
        }
      }
  }

  post{
    always{
        echo "Default always!"
    }
    success{
        echo "Sucess"
    }
    failure{
        echo "failed"
    }
  }
}
